{
  "manifest_version": 3,
  "name": "Gemini Sidebar - Q&A & Notes",
  "version": "1.0.0",
  "description": "Adds a sidebar to Google Gemini for saving questions, bookmarking, and writing markdown notes. Supports cloud sync via Supabase.",
  "permissions": ["storage"],
  "host_permissions": ["https://mfufuiztjecndzhdyrgx.supabase.co/*"],
  "action": {
    "default_title": "Gemini Sidebar 토글"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+G"
      },
      "description": "사이드바 토글"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["libs/marked.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
